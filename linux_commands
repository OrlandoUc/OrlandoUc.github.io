#to count number of rows in a .csv
hdfs dfs -cat ‘path_to_file.csv' | wc -l

#to count number of columns in a .csv
hdfs dfs -cat ‘path_to_file.csv’ | head -1 | tr ‘,’ ‘\n’ | wc -1

#to watch the first 'n' rows of a .csv
hdfs dfs -cat ‘path_to_file.csv’ | head -n

#to list all elements in file 
hdfs dfs -ls
